# Firebase Configuration (Public keys are safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-auth-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (SERVER-SIDE ONLY - NEVER EXPOSE)
# SECURITY-CRITICAL: These environment variables are used by the Firebase Admin SDK
# The variable names must match exactly what's used in /src/lib/firebase/admin.ts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account-email
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# AI Provider Keys (SERVER-SIDE ONLY)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Audio Processing APIs (SERVER-SIDE ONLY)
DEEPGRAM_API_KEY=your-deepgram-api-key
ELEVENLABS_API_KEY=your-elevenlabs-key

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Monitoring & Alerting (Optional)
MONITORING_WEBHOOK_URL=https://hooks.slack.com/your-webhook
MONITORING_API_KEY=your-monitoring-api-key
SECURITY_ALERT_WEBHOOK=https://hooks.slack.com/security-alerts

# Application Settings
NEXT_PUBLIC_APP_URL=https://your-app-url.com
NEXT_PUBLIC_APP_NAME="Universal Assistant"
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_MAX_AUDIO_DURATION=300
NEXT_PUBLIC_MAX_CONTEXT_LENGTH=4000
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# Security Headers
NEXT_PUBLIC_CSP_REPORT_URI=https://your-app-url.com/api/csp-report

# Performance & Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=60
NEXT_PUBLIC_AUDIO_RATE_LIMIT=10
NEXT_PUBLIC_AI_RATE_LIMIT=30

# Data Retention (days)
DATA_RETENTION_DAYS=90
AUDIO_RETENTION_DAYS=30
LOG_RETENTION_DAYS=365